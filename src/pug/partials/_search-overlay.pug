// Search overlay
#search-overlay.hidden.absolute.top-0.left-0.min-w-full.min-h-full.bg-white.duration-500.transition-all(class="z-[101] dark:bg-deepBlack dark:text-white")
	.px-10.py-40.w-full.h-screen.flex.flex-col.items-center
		.mb-8.bg-deepOrange.w-10.h-10.flex.rounded-full(class="shadow-gray-700 shadow-md hover:opacity-75 transition-opacity duration-500" aria-label= direction === 'ltr' ? 'Close search' : 'أغلق البحث')
			= '\n'
			i#search-close.m-auto.fas.fa-times.cursor-pointer.text-white( class='text-[24px]')
		.text-center.p-5(class="w-full md:w-2/3 lg:w-1/3")
			form(action='search.html' method='GET')
				= '\n'
				input#search-input.inline-block.w-full.px-3.py-2.text-gray-900.text-2xl.outline-none.border-0.border-orange-500(class="border-b-[3px] focus:outline-none focus:shadow-none focus:border-b-deepOrange dark:bg-deepBlack dark:text-white" type='text' name='s' placeholder= direction === 'ltr' ? 'Search keywords...' : 'كلمات البحث...')
|
